<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="299dp"
    android:layout_height="wrap_content"
    android:paddingVertical="7dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/categoryIcon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/no_category_selected"/>

    <TextView
        android:id="@+id/categoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ăn uống"
        android:textSize="16sp"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/categoryIcon"
        android:layout_marginLeft="9dp"/>

    <TextView
        android:id="@+id/transactionDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6-10-2023"
        android:textSize="14sp"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/date"
        app:layout_constraintTop_toBottomOf="@id/categoryName"
        app:layout_constraintLeft_toRightOf="@id/categoryIcon"
        android:layout_marginLeft="9dp"/>

    <TextView
        android:id="@+id/transactionNote"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Đồ dự trữ tháng 7"
        android:maxLines="1"
        android:textSize="14sp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/note"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="textEnd"
        android:ellipsize="end"
        android:layout_marginRight="15dp"/>

    <TextView
        android:id="@+id/transactionAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="500,000"
        android:textSize="14sp"
        android:textColor="@color/spend"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fontFamily="@font/montserrat_semibold"
        android:layout_marginRight="15dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>