<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txtViewProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:fontFamily="@font/montserrat_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/txtViewUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Họ và tên:"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:fontFamily="@font/montserrat_semibold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="80dp" />

    <EditText
        android:id="@+id/editTxt_username"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/custom_edt"
        android:hint="Nhập tên mới"
        android:textSize="16sp"
        android:inputType="text"
        android:maxLines="1"
        android:fontFamily="@font/montserrat_semibold"
        android:paddingStart="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtViewUserName"
        android:layout_marginTop="13dp"
        android:layout_marginHorizontal="30dp"/>

    <ImageButton
        android:id="@+id/btn_yes1"
        android:layout_width="82dp"
        android:layout_height="45dp"
        android:background="@color/green"
        android:src="@drawable/check1"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toBottomOf="@id/editTxt_username"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginRight="30dp" />


    <ImageView
        android:id="@+id/backButton"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:src="@drawable/back_arrow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:scaleType="fitXY"
      />


</androidx.constraintlayout.widget.ConstraintLayout>